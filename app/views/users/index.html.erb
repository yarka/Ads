<h1>Listing users</h1>

<table>
  <tr>
    <th>Email</th>
    <th>First name</th>
    <th>Last name</th>
    <th> Role </th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.role %> </td>
      <td><%= link_to 'Show', user %></td>
      <% if can? :update, user %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <% end %>
      <% if can? :destroy, user %>
        <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
  <p> <%= will_paginate @users %> </p>
</table>