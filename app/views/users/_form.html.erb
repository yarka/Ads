<%= semantic_form_for @user do |f| %>
  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
  <% end %>
  <% if can? :assign_role, current_user %>
    <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end  %>
<% end %>
