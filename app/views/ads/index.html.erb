<% title "Ads" %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image Url</th>
    <th>Price</th>
  </tr>
  <% for ad in @ads %>
    <tr>
      <td><%= ad.title %></td>
      <td><%= ad.description %></td>
      <%#*TODO: make it DRYer%>
      <% unless ad.cover_image.blank? %>
        <td><%= image_tag ad.cover_image.url %></td>
      <% end  %>
      <td><%= ad.price %></td>
      <td><%= link_to "Show", ad %></td>
      <td><%= link_to "Edit", edit_ad_path(ad) %></td>
      <td><%= link_to "Destroy", ad, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<p> <%= will_paginate @ads %></p>
<p><%= link_to "New Ad", new_ad_path %></p>
