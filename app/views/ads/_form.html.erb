<%= semantic_nested_form_for @ad, :validate => true, :html => {:multipart => true} do |f| %>
  <%= f.inputs do %>
    <%= f.input :title, :hint => "Title should be at least 10 characters long" %>
    <%= f.input :description %>
    <%= f.input :adtype_id, :as => :select, :collection => Adtype.find(:all) %>
    <%= f.fields_for :images %>
    <%= f.link_to_add "Add image", :images %>
    <%= f.input :price %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end  %>
<% end %>

